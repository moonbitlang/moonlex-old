///|
pub fn parse_lex_from_string(input : String) -> @type.Lex raise ParseError {
  let lexbuf = Lexbuf::from_string(input)
  lex_eoi(
    fn() {
      let tok = token(lexbuf)
      (tok, (), ())
    },
    (),
  )
}

///|
pub fn parse_regex_from_string(input : String) -> @type.Regex raise ParseError {
  let lexbuf = Lexbuf::from_string(input)
  regex_eoi(
    fn() {
      let tok = token(lexbuf)
      (tok, (), ())
    },
    (),
  )
}
