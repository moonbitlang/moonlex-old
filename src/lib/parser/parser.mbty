%start lex_eoi
%start regex_eoi
%derive<Show> Token
%derive<Show> ParseError

%token EOI
%token EOF          "eof"
%token PARSE_LBRACE "parse {"
%token LET          "let"
%token AS           "as"
%token UNDERSCORE   "_"
%token RBRACE       "}"
%token LPAREN       "("
%token RPAREN       ")"
%token LBRACKET     "["
%token RBRACKET     "]"
%token EQ           "="
%token SEMICOLON    ";"
%token FAT_ARROW    "=>"
%token BAR          "|"
%token STAR         "*"
%token PLUS         "+"
%token QUESTION     "?"
%token MINUS        "-"
%token CARET        "^"

%token<(String, String, String)> RULE_LC_IDENT_LPAREN_CODE_RPAREN_ARROW_CODE_LBRACE
%token<String> LBRACE_CODE_RBRACE
%token<String> LC_IDENT
%token<Char> CHAR
%token<String> STRING

%%

lex_eoi -> @type.Lex
  : lex EOI                             { $1 }
  ;

regex_eoi -> @type.Regex
  : regex EOI                           { $1 }
  ;

lex -> @type.Lex
  :                                     {
                                          { header: "", named_regexes: [], rules: [],  trailer: "" }
                                        }
  | header named_regex_list nonempty_rule_list trailer 
                                        {
                                          { header: $1, named_regexes: $2.to_array(), rules: $3.to_array(), trailer: $4 }
                                        }
  ;

header -> String
  : LBRACE_CODE_RBRACE                  { $1 }
  |                                     { "" }
  ;

trailer -> String 
  : LBRACE_CODE_RBRACE                  { $1 }
  |                                     { "" }
  ;

named_regex_list -> @list.List[(String, @type.Regex)]
  : named_regex named_regex_list        { @list.construct($1, $2) }
  | { @list.empty() }
  ;

named_regex -> (String, @type.Regex)
  : "let" LC_IDENT "=" regex ";"        { ($2, $4) }
  ;

nonempty_rule_list -> @list.List[@type.Rule]
  : rule                                { @list.construct($1, @list.empty()) }
  | rule nonempty_rule_list             { @list.construct($1, $2) }
  ;

rule -> @type.Rule
  : RULE_LC_IDENT_LPAREN_CODE_RPAREN_ARROW_CODE_LBRACE "parse {" rule_item_list "}" "}" 
                                        {
                                          let (name, params, return_type) = $1
                                          let patterns = $3.to_array()
                                          { name, params, return_type, patterns }
                                        }
  ;

rule_item_list -> @list.List[(@type.Regex, @type.CodeBlock)]
  : rule_item rule_item_list            { @list.construct($1, $2) }
  |                                     { @list.empty() }
  ;

rule_item -> (@type.Regex, @type.CodeBlock)
  : regex "=>" LBRACE_CODE_RBRACE       { ($1, $3) }
  ;

regex -> @type.Regex
  : alias                               { $1 }
  ;

alias -> @type.Regex
  : alternation                         { $1 }
  | alternation "as" LC_IDENT           { Capture($1, $3) }
  ;

alternation -> @type.Regex
  : concatenation                       { $1 }
  | concatenation "|" alternation       { Alter($1, $3) }
  ;

concatenation -> @type.Regex
  : repetition                          { $1 }
  | repetition concatenation            { Concat($1, $2) }
  ;

repetition -> @type.Regex
  : atom                                { $1 }
  | atom "*"                            { Option(Repetition($1)) }
  | atom "+"                            { Repetition($1) }
  | atom "?"                            { Option($1) }
  ;

atom -> @type.Regex
  : "(" alias ")"                       { $2 }
  | character_class                     { CharSet($1) }
  | LC_IDENT                            { Named($1) }
  | CHAR                                { ReChar($1) }
  | STRING                              { ReStr($1) }
  | UNDERSCORE                          { Underscore }
  | EOF                                 { EOF }
  ;

character_class -> @eof_char_set.T
  : "[" character_class_inner "]"       { $2 }
  | "[" "^" character_class_inner "]"   { $3.negated() }
  ;

character_class_inner -> @eof_char_set.T
  : character_class_item character_class_inner 
                                        { $1 + $2 }
  | character_class_item                { $1 }
  ;

character_class_item -> @eof_char_set.T
  : CHAR                                { @eof_char_set.singleton($1) }
  | CHAR "-" CHAR                       { @eof_char_set.range($1, $3)}
  ;
